{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true, // Adicione esta linha
        "emitDecoratorMetadata": true // Adicione esta linha
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}